<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <FrameLayout
        android:id="@+id/main_tab_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="@drawable/main_tab_frame_tabwidget_background_img2">

        <TextView
            android:id="@+id/textBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="8dip"
            android:text="@string/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_title"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/Forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="8dip"
            android:text="@string/forward"/>
    </FrameLayout>
    
   <Spinner android:id="@+id/sp1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Spinner"
			android:layout_marginTop="10dp"
			android:drawSelectorOnTop="true" 
			android:prompt="@string/spinner_name"/>
     
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/running"/>
    
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

          <TextView
             android:id="@+id/text_adivisor" 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:paddingLeft="20dip"
             android:text="Running for 40min!!"
              />
          <Button
                android:id="@+id/btnKnow"
                android:layout_width="80dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:onClick="onKnowClicked"
                android:text="@string/button_know" >
          </Button>
       </LinearLayout>


</LinearLayout>